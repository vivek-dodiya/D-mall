<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display']">
    <%- include('./partials/header') %>
    
    <% user.cart.forEach(function(item){ %> 
        <div class="w-full flex items-start px-20 py-16 gap-10">
            <div class="w-[30%] rounded-md overflow-hidden">
                <div class="w-full flex justify-center items-center h-80 bg-[<%= item.bgcolor %>]">
                    <% if (item.image) { %>
                        <img class="w-full h-full" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>
                </div>
                <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>] text-[<%= item.textcolor %>]">
                    <h3 class="text-2xl"><%= item.name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center text-white justify-between px-5 py-3  bg-[#999]">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= bill %></h2>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ <%= Number(item.price) %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ <%= Number(item.discount) %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
                </div>
                <form action="/product/delete/<%= item._id %>" method="post">
                    <input type="submit" value="Delete" class="rounded-md text-white bg-red-500 px-2 mt-3 ">
                </form>
            </div>
        </div>
    <% }) %>
        
        <%- include('./partials/footer') %>
</body>

</html>